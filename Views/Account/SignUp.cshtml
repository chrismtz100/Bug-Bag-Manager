@model Bug_Bag_Manager.Models.UsersModel

<div class="container">
    <h2>Sign Up</h2>
    <p>
        All the fields marked with (
        <span style="color:red;">*</span>
        ) are mandatory fields.
    </p>
    <p>
        Already have an account? 
        Login in <span style="color:blue">@Html.ActionLink("here", "Login", "Account")</span>.
    </p>
</div>
<hr />

