@using System.Web.UI.WebControls
@using Bug_Bag_Manager.Models
@model IEnumerable<Bug_Bag_Manager.Models.TicketsModel>


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width = device-width" />
    <title>Index</title>
</head>

<body>
    <h2>View All Tickets</h2>

    <table id="ticketsTable" class="table">
        <tr>
            <th>
                Ticket #
            </th>
            <th>
                Created By
            </th>
            <th>
                Title
            </th>
            <th>
                Description
            </th>

            <th>
                Assigned Developer
            </th>
            <th>
                Priority
            </th>
            <th>
                Date Created
            </th>
            <th>
                Status
            </th>

            @*<th>
                    URL
                </th>
                <th>
                    Platform
                </th>
                <th>
                    Os
                </th>
                <th>
                    Browser
                </th>
                <th>
                    Steps to Reproduce
                </th>
                <th>
                    Expected Results
                </th>
                <th>
                    Actual Results
                </th>*@
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedBy) <br /> <h6>ID:@Html.DisplayFor(modelItem => item.UserId)</h6>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssignedTo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Priority)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TicketStatus)
        </td>
        <td>
            @Html.ActionLink("Details", "TicketDetails", "Home")
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Url)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Platform)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Os)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Browser)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StepsToReproduce)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpectedResult)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActualResult)
        </td>*@
    </tr>
        }
    </table>
</body>
</html>